{
    "include": ["src/**/*.ts"],
    "compilerOptions": {
        "target": "ES2022",
        "strict": true,
        "noImplicitThis": true,
        "allowJs": true,
        "outDir": "dist",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "module": "ES2022",
        "forceConsistentCasingInFileNames": true
    }
}
